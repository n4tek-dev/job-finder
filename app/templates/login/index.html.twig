{% extends 'base.html.twig' %}

{% block body %}
    <div class="container mt-5">
        <h1 class="mb-4 text-center">Zaloguj się lub zarejestruj</h1>
        <form action="{{ path('app_login') }}" method="post" class="w-50 mx-auto">
            <div class="form-group">
                <label for="username">Email</label>
                <input type="text" id="username" name="_username" value="{{ last_username }}" placeholder="Email" required autofocus class="form-control">
            </div>
            <div class="form-group mt-3">
                <label for="password">Hasło</label>
                <input type="password" id="password" name="_password" placeholder="Hasło" required class="form-control">
            </div>
            <button type="submit" name="login" class="btn btn-primary mt-4 w-100">Zaloguj</button>
        </form>

        {% if error %}
            <div class="alert alert-danger mt-3 text-center">
                {{ error.messageKey|trans(error.messageData, 'security') }}
            </div>
        {% endif %}

        <div class="text-center my-4">
            <hr class="d-inline-block w-30">
            <span class="mx-2">lub</span>
            <hr class="d-inline-block w-30">
        </div>

        <div class="text-center">
            <a href="{{ path('app_register') }}" class="btn btn-success">Nie masz konta? Zarejestruj się</a>
        </div>
    </div>
{% endblock %}